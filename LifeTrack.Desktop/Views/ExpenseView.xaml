<UserControl x:Class="LifeTrack.Desktop.Views.ExpenseView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LifeTrack.Desktop.Views"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Yeni Gider Ekleme Formu -->
        <GroupBox Header="Yeni Gider Ekle" Grid.Row="0" Margin="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Margin="5">
                    <TextBlock Text="Tutar" />
                    <TextBox Text="{Binding NewExpense.Amount, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>

                <StackPanel Grid.Column="1" Margin="5">
                    <TextBlock Text="Açıklama" />
                    <TextBox Text="{Binding NewExpense.Description, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>

                <StackPanel Grid.Column="2" Margin="5">
                    <TextBlock Text="Kategori" />
                    <ComboBox ItemsSource="{Binding Categories}" 
                              DisplayMemberPath="Name"
                              SelectedValuePath="Id"
                              SelectedValue="{Binding NewExpense.CategoryId}" />
                </StackPanel>

                <StackPanel Grid.Column="3" Margin="5">
                    <TextBlock Text="Tarih" />
                    <DatePicker SelectedDate="{Binding NewExpense.Date}" />
                </StackPanel>

                <Button Grid.Column="4" Content="Ekle" Command="{Binding AddExpenseCommand}" 
                        Margin="5" VerticalAlignment="Bottom" Padding="10,5" />
            </Grid>
        </GroupBox>

        <!-- Gider Listesi -->
        <DataGrid Grid.Row="1" Margin="10" ItemsSource="{Binding Expenses}" 
                  SelectedItem="{Binding SelectedExpense}" AutoGenerateColumns="False"
                  IsReadOnly="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Tutar" Binding="{Binding Amount, StringFormat='{}{0:C}'}" />
                <DataGridTextColumn Header="Açıklama" Binding="{Binding Description}" Width="*" />
                <DataGridTextColumn Header="Kategori" Binding="{Binding Category.Name}" />
                <DataGridTextColumn Header="Tarih" Binding="{Binding Date, StringFormat='{}{0:dd.MM.yyyy}'}" />
            </DataGrid.Columns>
        </DataGrid>

        <!-- İşlem Düğmeleri -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
            <Button Content="Güncelle" Command="{Binding UpdateExpenseCommand}" Margin="5" Padding="10,5" />
            <Button Content="Sil" Command="{Binding DeleteExpenseCommand}" Margin="5" Padding="10,5" />
        </StackPanel>
    </Grid>
</UserControl>