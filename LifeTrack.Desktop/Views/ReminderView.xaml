<UserControl x:Class="LifeTrack.Desktop.Views.ReminderView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800"
             Background="#F5F5F5">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Başlık -->
        <TextBlock Grid.Row="0" 
                   Text="🎯 Hatırlatıcılar" 
                   FontSize="24" 
                   FontWeight="SemiBold"
                   Foreground="#2E3440"
                   Margin="0,0,0,15"/>

        <!-- Yeni Hatırlatıcı Formu -->
        <Border Grid.Row="1" 
                CornerRadius="8" 
                Background="White"
                BorderThickness="1"
                BorderBrush="#E2E8F0"
                Padding="15"
                Margin="0,0,0,20">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Başlık -->
                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                    <TextBlock Text="Başlık" 
                               Foreground="#4A5568" 
                               Margin="0,0,0,5"/>
                    <TextBox Text="{Binding NewReminder.Title}" 
                             Padding="10,8"
                             BorderThickness="1"
                             BorderBrush="#CBD5E0"/>
                </StackPanel>

                <!-- Tarih -->
                <StackPanel Grid.Column="1" Margin="10,0,10,0">
                    <TextBlock Text="Tarih" 
                               Foreground="#4A5568" 
                               Margin="0,0,0,5"/>
                    <DatePicker SelectedDate="{Binding NewReminder.DueDate}"
                                Padding="5,5"/>
                </StackPanel>

                <!-- Saat -->
                <StackPanel Grid.Column="2" Margin="10,0,10,0">
                    <TextBlock Text="Saat" 
                               Foreground="#4A5568" 
                               Margin="0,0,0,5"/>
                    <TextBox Text="{Binding NewReminder.DueDate, StringFormat='HH:mm'}" 
                             Padding="10,8"
                             BorderThickness="1"
                             BorderBrush="#CBD5E0"/>
                </StackPanel>

                <!-- Ekle Butonu -->
                <Button Grid.Column="3" 
                        Command="{Binding AddReminderCommand}"
                        Content="+"
                        FontSize="20"
                        FontWeight="Bold"
                        Background="#4CAF50"
                        Foreground="White"
                        Height="40"
                        Width="40"
                        VerticalAlignment="Bottom"
                        Margin="10,0,0,0">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="20"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </Grid>
        </Border>

        <!-- Hatırlatıcı Listesi -->
        <DataGrid Grid.Row="2" 
                  ItemsSource="{Binding Reminders}" 
                  SelectedItem="{Binding SelectedReminder}"
                  AutoGenerateColumns="False"
                  HeadersVisibility="Column"
                  RowBackground="#FFFFFF"
                  AlternatingRowBackground="#F8F9FA"
                  BorderThickness="0"
                  CanUserAddRows="False">

            <DataGrid.Resources>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="#EDF2F7"/>
                    <Setter Property="Padding" Value="10,8"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                </Style>
            </DataGrid.Resources>

            <DataGrid.Columns>
                <DataGridTextColumn Header="📌 Başlık" Binding="{Binding Title}" Width="2*">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="Padding" Value="10,8"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="📅 Tarih" Binding="{Binding DueDate, StringFormat='dd.MM.yyyy'}" Width="1*">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="Padding" Value="10,8"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="HorizontalAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="🕒 Saat" Binding="{Binding DueDate, StringFormat='HH:mm'}" Width="1*">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="Padding" Value="10,8"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="HorizontalAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridCheckBoxColumn Header="✅ Tamamlandı" Binding="{Binding IsCompleted}" Width="1*">
                    <DataGridCheckBoxColumn.ElementStyle>
                        <Style TargetType="CheckBox">
                            <Setter Property="HorizontalAlignment" Value="Center"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                        </Style>
                    </DataGridCheckBoxColumn.ElementStyle>
                </DataGridCheckBoxColumn>

                <!-- Aksiyonlar -->
                <DataGridTemplateColumn Width="1*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button Command="{Binding DataContext.UpdateReminderCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                        Content="✏️"
                                        ToolTip="Düzenle"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Foreground="#2196F3"
                                        FontSize="16"
                                        Width="30"
                                        Height="30"
                                        Margin="5,0"/>
                                <Button Command="{Binding DataContext.DeleteReminderCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                        Content="🗑️"
                                        ToolTip="Sil"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Foreground="#F44336"
                                        FontSize="16"
                                        Width="30"
                                        Height="30"
                                        Margin="5,0"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>